# Archivo de configuración principal de Nginx

# Define el usuario y grupo bajo el cual se ejecuta Nginx
user www-data;

# Define el número de procesos de trabajo (work processes)
worker_processes auto;

# Define el archivo de error log y su nivel de logging
error_log /var/log/nginx/error.log warn;

# Define el archivo de PID
pid /var/run/nginx.pid;

# Eventos: configuración del manejador de conexiones
events {
    worker_connections 1024;  # Número máximo de conexiones por proceso de trabajo
}

# HTTP: configuración del servidor HTTP
http {
    # Incluir archivos de configuración adicionales
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # Configuración del log de acceso
    access_log /var/log/nginx/access.log combined;

    # Configuración de la compresión Gzip
    gzip on;
    gzip_disable "msie6";

    # Configuración de los buffers
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # Configuración de la lista de servidores virtuales
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;

    # Servidor por defecto
    server {
        listen 80;  # Puerto en el que escucha el servidor
        server_name example.com www.example.com;  # Nombre del servidor

        root /var/www/html;  # Raíz del documento
        index index.html index.htm;  # Archivos por defecto a servir

        location / {
            try_files $uri $uri/ =404;  # Intenta servir archivos, si no existe, retorna 404
        }

        # Configuración para errores
        error_page 404 /404.html;
        location = /404.html {
            internal;
        }

        # Configuración de redirección
        location ~ \.php$ {
            include snippets/fastcgi-php.conf;
            fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
        }

        location ~ /\.ht {
            deny all;
        }
    }
}
